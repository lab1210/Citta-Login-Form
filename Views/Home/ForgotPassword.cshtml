@model CittaLogin.Models.LoginModel
@{
    ViewData["Title"] = "Forgot Password";
}
<div class="max-h-screen flex flex-col">
    <form class="flex flex-col items-center justify-center h-screen font-[Poppins] sm:p-5 p-5">
        <div class="flex flex-col items-center mb-2">
            <div class="w-14 h-14">
                <img src="@Model.ProfileImagePath" class="w-full h-full" alt="Company Logo" />
            </div>
            <p class="text-[#666666] text-lg font-[400]">@Model.CompanyName</p>
        </div>

        <div class="border px-8 py-6 lg:w-1/3 sm:w-1/2 w-full border-[#66666680] rounded-2xl">
            <p class="font-[500] text-center mb-5 text-xl">Reset Your Password</p>

            <div class="flex flex-col gap-5 mb-3">
                <div class="flex flex-col gap-1">
                    <label class="font-[400] text-xs text-[#666666]" asp-for="Email">Email Address</label>
                    <input type="email" asp-for="Email" class="text-xs p-2 border border-[#66666659] rounded-lg">
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div class="text-xs text-[#666666] mb-4">
                    <p>Enter your email address and we'll send you a link to reset your password.</p>
                </div>
            </div>

            <div class="mb-5">
                <button type="submit" class="rounded-3xl bg-[#FBC0C0] text-white font-[500] w-full p-2">
                    Send Reset Link
                </button>
            </div>

            <div class="flex justify-center">
                <a asp-action="Index" class="text-xs underline underline-offset-2">Back to Login</a>
            </div>
        </div>
    </form>

    <div class="border-t footer flex justify-center items-center">
        <div class="w-20 h-8">
            <img src="~/Image/logo.png" class="w-full h-full" alt="Company Logo" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}